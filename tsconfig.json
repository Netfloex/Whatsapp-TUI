{
	"compilerOptions": {
		"baseUrl": ".",
		"esModuleInterop": true,
		"incremental": true,
		"jsx": "react",
		"module": "esnext",
		"moduleResolution": "node",
		"noEmit": true,
		"outDir": "dist",
		"paths": {
			"@lib": ["src/lib"],
			"@utils": ["src/utils"],
			"@ui": ["src/ui"],
			"@components": ["src/ui/components"],
			"@typings/*": ["src/typings/*"]
		},
		"skipLibCheck": true,
		"strict": false,
		"target": "ES5",
		"typeRoots": ["src/typings", "node_modules/@types"]
	},
	"ts-node": {
		"compilerOptions": {
			"module": "commonjs"
		}
	}
}
